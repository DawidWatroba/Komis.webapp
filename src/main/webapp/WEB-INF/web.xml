<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>pl.dawid.web.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>hello2</servlet-name>
    <servlet-class>pl.dawid.web.ControllerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>process</servlet-name>
    <servlet-class>pl.dawid.web.RedirectServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>add_user</servlet-name>
    <servlet-class>pl.dawid.web.SaveClientDataServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>hello2</servlet-name>
    <url-pattern>/hello2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>process</servlet-name>
    <url-pattern>/process</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>add_user</servlet-name>
    <url-pattern>/add_user</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc:komis</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <welcome-file-list>
    <welcome-file>hello2</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>dataSource</param-name>
    <param-value>jdbc:komis</param-value>
  </context-param>

</web-app>
